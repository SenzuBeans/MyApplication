<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.C01Main">


        <TextView
            android:id="@+id/otv01ShowText"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginTop="44dp"
            android:ellipsize="end"
            android:gravity="center"
            android:text="Text on hold"
            android:textSize="18dp"
            app:layout_constraintHorizontal_bias="0.051"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/oet01EnterText"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="32dp"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.736"
            app:layout_constraintStart_toEndOf="@+id/otv01ShowText"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/osn01AgregateFunction"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/otv01Agregate"
            app:layout_constraintTop_toBottomOf="@+id/oet01EnterText"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/otv01Agregate"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="Select Agregate"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.051"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/otv01ShowText" />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="172dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/ocm01Active"
                            android:layout_width="150dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="30dp"
                            android:text="Active Agregate" />

                        <Button
                            android:id="@+id/ocm01Create"
                            android:layout_width="150dp"
                            android:layout_height="60dp"
                            android:layout_marginEnd="30dp"
                            android:text="Create" />

                        <Button
                            android:id="@+id/ocm01Select"
                            android:layout_width="150dp"
                            android:layout_height="60dp"
                            android:layout_marginEnd="30dp"
                            android:text="Select" />

                        <Button
                            android:id="@+id/ocm01Search"
                            android:layout_width="150dp"
                            android:layout_height="60dp"
                            android:layout_marginEnd="30dp"
                            android:text="Search" />

                        <Button
                            android:id="@+id/ocm01SearchByDate"
                            android:layout_width="150dp"
                            android:layout_height="60dp"
                            android:layout_marginEnd="30dp"
                            android:text="Search By Date" />


                        <Button
                            android:id="@+id/ocm01SearchByTime"
                            android:layout_width="150dp"
                            android:layout_height="60dp"
                            android:layout_marginEnd="30dp"
                            android:text="Search By Time" />

                        <Button
                            android:id="@+id/ocm01Update"
                            android:layout_width="150dp"
                            android:layout_height="60dp"
                            android:layout_marginEnd="30dp"
                            android:text="Update" />

                        <Button
                            android:id="@+id/ocm01Delete"
                            android:layout_width="150dp"
                            android:layout_height="60dp"
                            android:layout_marginEnd="30dp"
                            android:text="Delete" />


                    </LinearLayout>
                </HorizontalScrollView>


                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/ocm01InsertInto"
                            android:layout_width="150dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="30dp"
                            android:text="Insert Into" />


                        <Button
                            android:id="@+id/ocm01SelectBV"
                            android:layout_width="150dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="30dp"
                            android:text="Select Command" />

                        <Button
                            android:id="@+id/ocm01SelectInto"
                            android:layout_width="150dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="30dp"
                            android:text="Select Into" />

                        <Button
                            android:id="@+id/ocm01Join"
                            android:layout_width="150dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="30dp"
                            android:text="Join" />

                        <Button
                            android:id="@+id/ocm01SubQuery"
                            android:layout_width="150dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="30dp"
                            android:text="Sub Query" />

                        <Button
                            android:id="@+id/ocm01DeleteBV"
                            android:layout_width="150dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="30dp"
                            android:text="Delete BV Item" />

                        <Button
                            android:id="@+id/ocm01HttpRequest"
                            android:layout_width="150dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="30dp"
                            android:text="Http Requset" />

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

        </ScrollView>

        <RadioGroup
            android:id="@+id/org01SortType"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="32dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollView"
            app:layout_constraintVertical_bias="0.068">

            <RadioButton
                android:id="@+id/orb01Sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:text="A - Z" />

            <RadioButton
                android:id="@+id/orb01SortReverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Z - A" />


        </RadioGroup>

        <CheckBox
            android:id="@+id/ocb01ShowKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Show Primary key"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.625"
            app:layout_constraintStart_toEndOf="@+id/org01SortType"
            app:layout_constraintTop_toBottomOf="@+id/scrollView" />

        <TextView
            android:id="@+id/otv01DateTime"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="date and time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.031"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/org01SortType" />

        <Button
            android:id="@+id/ocm01SetDateTime"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginTop="32dp"
            android:text="Set D&amp;T"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.732"
            app:layout_constraintStart_toEndOf="@+id/otv01DateTime"
            app:layout_constraintTop_toBottomOf="@+id/org01SortType" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/orv01RecyclerMain"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/otv01DateTime" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
