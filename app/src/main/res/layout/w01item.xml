<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="30px"
        android:background="@drawable/p01border">

        <TextView
            android:id="@+id/otv01DisplayText"
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical"
            android:text="Text"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/otv01DisplayKey"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:text="Key"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/otv01Value"
            app:layout_constraintTop_toBottomOf="@+id/otv01DisplayText"
            app:layout_constraintVertical_bias="0.083" />

        <Button
            android:id="@+id/ocm01SelectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.488" />

        <TextView
            android:id="@+id/otv01Value"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:text="Value"
            android:textStyle="italic"
            android:gravity="center_vertical"
            app:layout_constraintBaseline_toBaselineOf="@+id/otv01DisplayKey"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
